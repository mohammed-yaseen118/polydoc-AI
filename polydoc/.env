PORT=8000
DEBUG=True
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3003,http://127.0.0.1:3003,http://localhost:3004,http://127.0.0.1:3004

# =================
# SECURITY
# =================
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================
# LOGGING
# =================
LOG_LEVEL=INFO
LOG_FILE=./logs/polydoc.log

# =================
# REDIS (Optional - for caching)
# =================
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600  # 1 hour in seconds
